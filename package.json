{
  "name": "splendor-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"node backend/server.js\" \"npm --prefix frontend run dev\"",
    "build": "npm --prefix frontend run build",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "gitignore": "^0.7.0",
    "socket.io": "^4.7.5"
  }
}
